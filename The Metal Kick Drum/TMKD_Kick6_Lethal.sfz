loop_mode=one_shot
amp_veltrack=99
note_polyphony=2
off_time=2
seq_length=6
lovel=1
key=36

<region> region_label=01 sample=TMKD06 - Lethal_kick_01.wav seq_position=1
<region> region_label=02 sample=TMKD06 - Lethal_kick_02.wav seq_position=2
<region> region_label=03 sample=TMKD06 - Lethal_kick_03.wav seq_position=3
<region> region_label=04 sample=TMKD06 - Lethal_kick_04.wav seq_position=4
<region> region_label=05 sample=TMKD06 - Lethal_kick_05.wav seq_position=5
<region> region_label=06 sample=TMKD06 - Lethal_kick_06.wav seq_position=6