<control>
default_path=TMKD_Kick6_Lethal/WAV/

label_cc7=Vol
label_cc10=Pan
set_cc7=100
set_hdcc10=0.5

<group>
amplitude_oncc7=100
amplitude_curvecc7=4
pan_oncc10=100
